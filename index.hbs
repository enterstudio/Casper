{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header grid-gradient-bg>
    <nav class="main-nav overlay clearfix">
        <!--{{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}-->
    </nav>
    <div class="vertical grid-bg">
        <div class="main-header-content inner">
            <h1 class="page-title">
                {{#if @blog.logo}}<a href="{{@blog.url}}"><img style="height: 3em" src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
            </h1>
            <!-- Mailchimp signup form -->
            <form action="//gorgias.us12.list-manage.com/subscribe/post?u=bb9a513881d5fd7f34c4f73b4&amp;id=822af8eb1d;LOCATION=head" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate sub-form" target="_blank" novalidate="" _lpchecked="1">
                <div class="helpdesk-email-from input-group col-sm-offset-3 col-sm-6">
                    <input type="email" name="EMAIL" class="form-control" placeholder="Your email" required="required">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="Subscribe" onclick="ga('send', 'event', 'button', 'click', 'subscribe-header');">Request early access</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
